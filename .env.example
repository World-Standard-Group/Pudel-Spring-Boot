# ===========================================
# Pudel Discord Bot - Environment Configuration
# Copy this file to .env and fill in your values
# ===========================================

# ===========================================
# Git Repository (for auto-updates)
# ===========================================
GIT_REPO=https://github.com/World-Standard-Group/Pudel-Spring-Boot.git
GIT_BRANCH=main

# ===========================================
# PostgreSQL Database Configuration
# ===========================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASS=pudelpassword
POSTGRES_DB=pudel

# ===========================================
# Discord Bot Configuration (REQUIRED)
# Get these from https://discord.com/developers/applications
# ===========================================
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_CLIENT_SECRET=your_client_secret_here
DISCORD_REDIRECT_URI=http://localhost/auth/callback

# ===========================================
# Security Configuration
# ===========================================
# JWT Secret - IMPORTANT: Change this in production!
# Must be at least 32 characters
JWT_SECRET=change-this-secret-key-in-production-min-32-chars
JWT_EXPIRATION=604800000

# ===========================================
# CORS Configuration
# Comma-separated list of allowed origins
# ===========================================
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost

# ===========================================
# Ollama LLM Configuration
# Local AI for intelligent chatbot responses
# ===========================================
OLLAMA_ENABLED=true
OLLAMA_URL=http://localhost:11434
OLLAMA_PORT=11434
# Available models: qwen3:8b, llama3.1:8b, mistral:7b, etc.
OLLAMA_MODEL=qwen3:8b

# ===========================================
# Embedding Configuration
# Used for semantic search and memory
# ===========================================
EMBEDDING_ENABLED=true
# Available models: qwen3-embedding:8b, nomic-embed-text, etc.
EMBEDDING_MODEL=qwen3-embedding:8b

# ===========================================
# Server Configuration
# ===========================================
SERVER_PORT=8080

# ===========================================
# JVM Configuration
# Adjust based on your server resources
# ===========================================
JAVA_OPTS=-Xms512m -Xmx2g -XX:+UseG1GC -XX:+UseStringDeduplication

